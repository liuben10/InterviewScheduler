
<%= content_tag :h4, "Edit page for #{@recruiter.name}" %>
  <%= form_for @recruiter, :html => { :multipart => true }, url: "/recruiters/#{@recruiter.username}", method: :put do |f| %>
    <div class="field">
      <%= f.label "Name" %>
      <%= f.text_field :name, :value=>"#{@recruiter.name}" %>
    </div>
      <div class="field">
        <%= f.label "Email" %>
        <%= f.text_field :email, :value=>"#{@recruiter.email}" %>
    </div>
      <div class ="field">
        <%= f.label "Password" %>
        <%= f.password_field :password, :value=>"#{@recruiter.password}" %>
    </div>

    <div class="pic">
      <br/>
      <%= f.label "Picture" %>
      <%= f.file_field :pic %>
      <br/>
    </div>

    <br/>

    <div class="actions">
      <input type="submit" id="subutton" class="large button" value="Update">
    </div>
<% end %>

