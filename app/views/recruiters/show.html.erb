<div class = "row">
  <div class = "large-12 columns">
    <%= content_tag :h4, "#{@recruiter.name}'s page" %>
  </div>
  <div class="large-12 columns">
    <%= image_tag @recruiter.pic.url(:thumb) %>
  </div>
  <br/>

</div>

<div class = "row">
  <div class = "large-1 columns user-icon">
    <%= link_to raw('<i style="display: inline-block;" class="fi-home profile-icon"></i>'), recruiter_path %>
    <%= link_to raw('<i style="display: inline-block;" class="fi-list-thumbnails profile-icon"></i>'), list_recruiter_path %>
    <%= link_to raw('<i style="display: inline-block;" class="fi-calendar profile-icon"></i>'), calendar_recruiter_path %>
    <i class="fi-mail profile-icon"></i>
    <i class="fi-wrench profile-icon"></i>
  </div>

  <div class = "large-8 columns">
    <h2> Dashboard </h2>
    <h3> Upcoming Events </h3>
    <% if @appointments.empty? %>
      <p> No upcoming events </p>
    <% else %>
      <% @appointments.each do |appointment|%>
        <p><%="#{appointment.meet_with}, #{mdyFormat(appointment.date)}"%></p>
      <% end %>
    <% end %>
  </div>

  <div class = "large-3 columns">
    <form action="/recruiters/<%=@recruiter.username%>/edit" method="get">
       <input type="submit"  value="Edit" class="medium button" id="edit_button">
    </form>
  </div>
</div>
