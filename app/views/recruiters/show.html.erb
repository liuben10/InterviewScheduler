       <option selected value="0">Jan</option>
       <option value="1">Feb</option>
       <option value="2">March</option>
       <option value="3">April</option>
       <option value="4">May</option>
       <option value="5">June</option>
       <option value="6">July</option>
       <option value="7">Aug</option>
       <option value="8">Sept</option>
       <option value="9">Oct</option>
       <option value="10">Nov</option>
       <option value="11">Dec</option>
   </select>
   </div>
   <div>
   <select id="end_date" name="end_date">
       <%  options = []
           (1..31).each do |n|
              dateOption = [n+1, n+1]
              options << dateOption
           end %>
        <%= options_for_select(options, 1) %>
    </select>
   </div>
   <div>
   <select id="end_year" name="end_year">
       <option value="2013">2013</option>
       <option value="2014">2014</option>
       <option value="2015">2015</option>
       <option value="2016">2016</option>
    </select>
   </div>
<label>Start_Time(hr, min):</label>
  <div>
  <select id="start_hour" name="start_hour">
    <% options = []
       (1..12).each do |n|
          timeOption = [n, n]
          options << timeOption
       end %>
     <%= options_for_select(options, 1) %>
  </select>
  </div>
  <div>
  <select id="start_minutes" name="start_minutes">
      <% options = []
       (0..59).each do |n|
          timeOption = [n, n]
          options << timeOption
       end %>
     <%= options_for_select(options, 1) %>
  </select>
  </div>
  <div>
  <select id="start_selection" name="start_selection">
      <option selected value="AM">AM</option>
      <option value="PM">PM</option>
  </select>
  </div>
<label>End_Time(hr, min):</label>
    <div>
    <select id="end_hour" name="end_hour">
    <% options = []
       (1..12).each do |n|
          timeOption = [n, n]
          options << timeOption
       end %>
     <%= options_for_select(options, 1) %>
  </select>
  </div>
  <div>
  <select id="end_minutes" name="end_minutes">
      <% options = []
       (0..59).each do |n|
          timeOption = [n, n]
          options << timeOption
       end %>
     <%= options_for_select(options, 1) %>
  </select>
  </div>
 <div>
  <select id="end_selection" name="end_selection">
      <option selected value="AM">AM</option>
      <option value="PM">PM</option>
  </select></div>
 <label>Description</label><textarea id="description" name="description" class="textarea"></textarea>
<%= hidden_field_tag "recruiter_id", "#{@recruiter.id}" %>
<input type="submit" class="submitForm" id="submitButton" value="Submit">
</form>
<input type="submit" class="submitForm" id="cancelButton" value="Cancel"></div>
<%= hidden_field_tag 'eventstring', "#{@eventsAsString}" %>
<script type='text/javascript'>
  $(document).ready(function() {
     $('#calendar').fullCalendar({
      editable: true,
      selectable: true,
      selectHelper: true,
      events:
      [
          <% @events.each do |event| %>
          {
             title : "<%= event.name %>",
             start: "<%= event.start_at %>",
             end: "<%= event.end_at %>",
           },
          <% end %>
      ],
      select: function(start, end, allDay) {
         $(".popup").show(); // show's pop up
         $(".popup").attr("action", "/event/create");
         $(".popup").attr("method", "post");
         var startDate = new Date(start);
         var endDate = new Date(end);
         $("#start_month").val(startDate.getMonth());
         $("#start_date").val(startDate.getDate());
         $("#start_year").val(startDate.getFullYear());
         $("#end_month").val(endDate.getMonth());
         $("#end_date").val(endDate.getDate());
         $("#end_year").val(endDate.getFullYear());
         $(".popup").draggable();
         $(".submitForm").click(function(){ // on submission
              var title = $(".title").val(); // gets title value
              if(title != ""){ // if the title exists run script
              }
            $(".title").attr("value", "");
            $(".popup").hide(); // hide pop up box
        });
        $("#cancelForm").click(function() {
           $(".popup").hide();
     });

      },
     unselect: function() {
      },

  });
});

</script>
