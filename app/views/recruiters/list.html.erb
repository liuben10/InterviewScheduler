<div class = "row">
  <div class = "large-12 columns">
    <%= content_tag :h4, "#{@recruiter.name}'s page" %>
  </div>
</div>

<div class = "row">

  <div class = "large-1 columns user-icon">
  <%= link_to raw('<i class="fi-home profile-icon"></i>'), recruiter_path %>
  <%= link_to raw('<i class="fi-list-thumbnails profile-icon"></i>'), list_recruiter_path %>
    <i class="fi-calendar profile-icon"></i>
    <i class="fi-mail profile-icon"></i>
    <i class="fi-wrench profile-icon"></i>
  </div>

  <div class = "large-8 columns">
  <h3> List of Associated Candidates </h3>
  <table>
    <tr>
      <th>Full Name</th>
      <th>Username</th>
      <th>Email</th>
    </tr>
  <% @candidates.each do |candidate|%>
    <tr>
      <td><%=candidate.name%></td>
      <td><%=candidate.username%></td>
      <td><%=candidate.email%></td>
    </tr>
  <% end %>
  </table>
  <br /><br />
  <h3> Send an Email Message to a Candidate </h3>
  <%= form_tag("message_candidate", method: "post") do %>
    <%= label_tag(:candidate, "Candidate's Username") %>
    <%= text_field_tag(:candidate) %>
    <%= label_tag(:message, "Your Message") %>
    <%= text_field_tag(:message) %>
    <%= submit_tag("Send")%>
  <% end %>
  </div>

  <div class = "large-3 columns">
  <h6> Associate Candidate </h6>
  <% if flash[:error] %>
    <%= flash[:error] %>
    </br></br>
  <% end %>
  <%= form_tag("add_candidate", method: "post") do %>
      <%= label_tag(:candidate, "Candidate's Username") %>
      <%= text_field_tag(:candidate) %>
      <%= submit_tag("Add") %>
  <% end %>


  </div>
</div>
