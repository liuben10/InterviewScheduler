<div class = "row">
  <div class = "large-12 columns">
    <%= content_tag :h4, "#{@recruiter.name}'s page" %>
  </div>
</div>

<div class = "row">

  <div class = "large-1 columns user-icon">
  <%= link_to raw('<i class="fi-home profile-icon"></i>'), recruiter_path %>
  <%= link_to raw('<i class="fi-list-thumbnails profile-icon"></i>'), list_recruiter_path, :id=>"List" %>
  <%= link_to raw('<i style="display: inline-block;" class="fi-calendar profile-icon"></i>'), calendar_recruiter_path %>
      <%= link_to raw('<i style="display: inline-block;" class="fi-mail profile-icon"></i>'), recruiter_mailbox_path(@recruiter.username, "inbox") %>
    <%= link_to raw('<i class="fi-wrench profile-icon"></i>'), "/recruiters/#{@recruiter.username}/edit", :id=>"Edit" %>
  </div>

  <div class = "large-8 columns">
  <h3> List of Associated Candidates </h3>
  <table id="candidates">
    <tr>
      <th>Full Name</th>
      <th>Username</th>
      <th>Email</th>
    </tr>
  <% @candidates.each do |candidate|%>
    <tr>
      <td id="name"><%=candidate.name%></td>
      <td id="username"><%=candidate.username%></td>
      <td id="email"><%=candidate.email%></td>
    </tr>
  <% end %>
  </table>
  <br /><br />
  <h3> Send an Email Message to a Candidate </h3>
  <%= form_tag("message_candidate", method: "post") do %>
    <%= label_tag(:candidate, "Candidate's Username") %>
    <%= text_field_tag(:candidate) %>
    <%= label_tag(:message, "Your Message") %>
    <%= text_field_tag(:message) %>
    <%= submit_tag("Send")%>
  <% end %>
  </div>

  <div class = "large-3 columns">
  <h6> Associate Candidate </h6>
  <% if flash[:error] %>
    <%= flash[:error] %>
    </br></br>
  <% end %>
  <%= form_tag("add_candidate", method: "post") do %>
      <%= label_tag(:candidate, "Candidate's Username") %>
      <%= text_field_tag(:candidate, nil, :id=>"candidate_username") %>
      <%= submit_tag("Add") %>
  <% end %>
  <h6> Search by name / username </h6>
  <%= form_tag("search", method: "get") do %>
    <input type="hidden" id="recruiter" name="recruiter" value="<%= @recruiter.username %>" >
    <input type="text" id="keyword" name="keyword">
    <input type="submit" id="Search" value="Search">
  <% end %>

  </div>
</div>
