<div class="row">
<div class = "row">
  <div class = "large-1 columns user-icon">
    <%= link_to raw('<i style="display: inline-block;" class="fi-home profile-icon"></i>'), recruiter_path %>
    <%= link_to raw('<i style="display: inline-block;" class="fi-list-thumbnails profile-icon"></i>'), list_recruiter_path, :id=>"List" %>
    <%= link_to raw('<i style="display: inline-block;" class="fi-calendar profile-icon"></i>'), calendar_recruiter_path %>
      <%= link_to raw('<i style="display: inline-block;" class="fi-mail profile-icon"></i>'), recruiter_mailbox_path(@recruiter, "inbox") %>
    <%= link_to raw('<i class="fi-wrench profile-icon"></i>'), "/recruiters/#{@recruiter}/edit", :id=>"Edit" %>
  </div>
<% if @type == "inbox" %>
<div class="large-2 columns"><strong> Inbox </strong></div>
<div><a href="/recruiter/<%= @recruiter %>/mailbox/outbox">Outbox </a></div>
<% else %>
  <div class="large-2 columns"><a href="/recruiter/<%= @recruiter %>/mailbox/inbox">Inbox</a></div>
  <div><strong> Outbox </strong></div>
<% end %>
<table>
  <thead>
    <tr>
      <th> Title </th>
      <% if @type == "inbox" %>
      <th> From </th>
      <% else %>
       <th> To </th>
      <% end %>
    <tr>
  </thead>
<tbody>
<% @mail.each do |mail| %>
  <tr>
     <td><a href="/message/show/recruiter/<%= @recruiter %> / <%= mail.id %>"><%= mail.title %></a></td>
     <% if @type == "inbox" %>
     <td><%= mail.from %></td>
     <% else %>
     <td><%= mail.to %></td>
     <% end %>
   </tr>
<% end %>
</tbody>
</table>
<div class="large-1 columns">
<button class="small button" id="compose_button">Compose </a>
</div>
</div>

<script>
  $("#compose_button").click( function() {
    window.location.href = "/message/recruiter/" + "<%= @recruiter %>";
  });
</script>
