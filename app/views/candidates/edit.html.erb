<div class="row">
     <div class = "large-1 columns user-icon">
  <%= link_to raw('<i style="display: inline-block;" class="fi-home profile-icon"></i>'), candidate_path %>
  <%= link_to raw('<i style="display: inline-block;" class="fi-list-thumbnails profile-icon"></i>'), list_candidate_path, :id=>"List"%>
  <%= link_to raw('<i style="display: inline-block;" id="mailbox" class="fi-calendar profile-icon"></i>'), calendar_candidate_path %>
    <%= link_to raw('<i style="display: inline-block;" class="fi-mail profile-icon"></i>'), candidate_mailbox_path(@candidate.username, "inbox") %>
   <%=  link_to raw('<i class="fi-wrench profile-icon"></i>'), "/candidates/#{@candidate.username}/edit", :id=>"Edit"%>
  </div>
<div class = "large-11 columns">
<%= content_tag :h4, "Edit page for #{@candidate.name}" %>
  <%= form_for @candidate, :html => {:id => "new_candidate", :multipart => true }, url: "/candidates/#{@candidate.username}", method: :put do |f| %>
    <div class="field">
      <%= f.label "Name" %>
      <%= f.text_field :name, :value=>"#{@candidate.name}" %>
    </div>
    <div class="field">
      <%= f.label "Email" %>
      <%= f.text_field :email, :value=>"#{@candidate.email}" %>
    </div>
    <div class ="field">
      <%= f.label "Password" %>
      <%= f.password_field :password, :value=>"#{@candidate.password}" %>
    </div>

    <div class="attachment">
      <%= f.label "Attachment" %>
      <%= f.file_field :attach %>
      <br/>
    </div>

    <div class="pic">
      <br/>
      <%= f.label "Picture" %>
      <%= f.file_field :pic %>
      <br/>
    </div>

    <br/>

    <div class="actions">
      <input type="submit" id="subutton" class="small button" value="Update">
       <input type="submit" id="cancel" class="small button" value="Cancel">
    </div>
<% end %>
</div>
</div>
<script>
 $("#cancel").click( function () {
    $("#new_candidate").attr("action", "/welcome/index");
    $("#new_candidate").attr("method", "get");
 });
</script>


