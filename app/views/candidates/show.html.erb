<div class = "row">
  <div class = "large-12 columns">
    <%= content_tag :h4, "#{@candidate.name}'s page" %>
  </div>
  <div class="large-12 columns">
   </div>
  <br/>
  <div class="large-12 columns">
    <a style="display: inline-block;" href="<%= @candidate.attach.url %>">Resume</a>
  </div>
</div>

<div class = "row">
  <div class = "large-1 columns user-icon">
  <%= link_to raw('<i style="display: inline-block;" class="fi-home profile-icon"></i>'), candidate_path %>
  <%= link_to raw('<i style="display: inline-block;" class="fi-list-thumbnails profile-icon"></i>'), list_candidate_path %>
  <%= link_to raw('<i style="display: inline-block;" class="fi-calendar profile-icon"></i>'), calendar_candidate_path %>
    <i class="fi-mail profile-icon"></i>
   <%=  link_to raw('<i class="fi-wrench profile-icon"></i>'), "/candidates/#{@candidate.username}/edit"%>
  </div>

  <div class = "large-8 columns">
    <h2> Dashboard </h2>
    <h3> Upcoming Events </h3>
    <% if @events.empty? %>
      <p> No upcoming events </p>
    <% else %>
      <% @events.each do |appointment|%>
                            <h6><%= "Appointment Request from #{appointment.recruiter_id}" %></h6>
                            <p>
                              Appointment: <%="#{appointment.name}"%><br>
                              Start Time:<%="#{mdyFormat(appointment.start_at)}"%><br>
                              Description: <%="#{appointment.description}"%></p>
      <% end %>
    <% end %>
      <% end %>
    <% end %>
  </div>


  <div class = "large-3 columns">
    <%= image_tag @candidate.pic.url(:thumb) %>
   </div>

</div>

