<div class = "row">
  <div class = "large-12 columns">
    <%= content_tag :h4, "#{@candidate.name}'s page" %>
  </div>
  <div class="large-12 columns">
   </div>
  <br/>
  <div class="large-12 columns">
    <a style="display: inline-block;" href="<%= @candidate.attach.url %>">Resume</a>
  </div>
</div>

<div class = "row">
  <div class = "large-1 columns user-icon">
  <%= link_to raw('<i style="display: inline-block;" class="fi-home profile-icon"></i>'), candidate_path %>
  <%= link_to raw('<i style="display: inline-block;" class="fi-list-thumbnails profile-icon"></i>'), list_candidate_path, :id=>"List"%>
  <%= link_to raw('<i style="display: inline-block;" class="fi-calendar profile-icon"></i>'), calendar_candidate_path %>
    <%= link_to raw('<i style="display: inline-block;" class="fi-mail profile-icon"></i>'), candidate_mailbox_path(@candidate.username, "inbox"), :id => "mailbox" %>
   <%=  link_to raw('<i class="fi-wrench profile-icon"></i>'), "/candidates/#{@candidate.username}/edit", :id=>"Edit"%>
  </div>

  <div class = "large-8 columns">
    <h2> Dashboard </h2>

    <div class = "row">
      <div class = "large-6 columns">
        <h3> Upcoming Events </h3>
        <% if @events.empty? %>
          <p> No upcoming events </p>
        <% else %>
          <% @events.each do |event|%>
            <p><%=show_event_info(event, event.recruiter_id)%></p>
          <% end %>
        <% end %>
      </div>

      <div class = "large-6 columns">
          <h3> Pending Interview Requests </h3>
          <% if @requests.empty? %>
            <p> No pending requests </p>
          <% else %>
            <table id="pending_requests">
              <% @requests.each do |request|%>
                <tr>
                  <td><%=show_request_info(request, request.recruiter_id)%></td>
                  <td><a class="small button" href="/event/show/<%=request.id%>?from_id=<%=@candidate.username%>">Details</a></td>
                </tr>
              <% end %>
            </table>
          <% end %>
      </div>
    </div>

  </div>


  <div class = "large-3 columns">
    <%= image_tag @candidate.pic.url(:thumb) %>
   </div>

</div>

