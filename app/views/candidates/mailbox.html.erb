<div class = "row main-page">
  <div class = "small-1 columns user-icon">
    <%= link_to raw('<i class="fi-home profile-icon"></i>'), candidate_path %>
    <p>Home</p>
    <%= link_to raw('<i class="fi-calendar profile-icon"></i>'), calendar_candidate_path %>
    <p>Calendar</p>
    <%= link_to raw('<i class="fi-list-thumbnails profile-icon"></i>'), list_candidate_path, :id=>"List"%>
    <p>Contacts</p>
    <%= link_to raw('<i class="fi-mail profile-icon active-icon"></i>'), candidate_mailbox_path(@candidate, "inbox") %>
    <p>Messages</p>
    <%= link_to raw('<i class="fi-wrench profile-icon"></i>'), "/candidates/#{@candidate}/edit", :id=>"Edit"%>
    <p>Settings</p>
  </div>

  <div class = "small-8 columns">
	<div class = "row page-title">
      <div class = "small-12 columns">
        <h2> Messages </h2>
      </div>
    </div>    
    
    <div class = "row">
	  <div class = "small-12">
		
		<dl class="sub-nav">
  			<dd><a href="/candidate/<%= @candidate %>/mailbox/inbox">Inbox</a></dd>
  			<dd><a href="/candidate/<%= @candidate %>/mailbox/outbox">Outbox</a></dd>
		</dl>
	    <% if @type == "inbox" %>
		  
		<% else %>
		
		<% end %>	
	  </div>
	</div> 
  <div class = "row">
	<div class = "small-12">
  <table id = "mailbox">
    <thead>
      <tr>
        <th id = "messenger"> Messenger </th>
        <th id = "title"> Title </th>
        <th id = "content"> Content </th>
      <tr>
    </thead>
  <tbody>
    <% @mail.each do |mail| %>
      <tr>
        <td>
	      <% if @type == "inbox" %>
	        <%= mail.from %>
	      <% else %>
	        <%= mail.to %>
	      <% end %>
	    </td>
      </tr>
    <% end %>
  </tbody>
  </table>
    </div>
  </div>
  <button class="small button alert" id="compose_button">Compose </a>
  </div>
  <div class = "small-3">
  </div>

</div>

<script>
  $("#compose_button").click( function() {
    window.location.href = "/message/candidate/" + "<%= @candidate %>";
  });
</script>
