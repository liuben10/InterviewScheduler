<div class = "row">
  <div class = "large-12 columns">
    <%= content_tag :h4, "#{@candidate.name}'s page" %>
  </div>
</div>

<div class = "row">

  <div class = "large-1 columns user-icon">
  <%= link_to raw('<i class="fi-home profile-icon"></i>'), candidate_path %>
  <%= link_to raw('<i class="fi-list-thumbnails profile-icon"></i>'), list_candidate_path, :id=>"List" %>
  <%= link_to raw('<i style="display: inline-block;" class="fi-calendar profile-icon"></i>'), calendar_candidate_path %>
       <%= link_to raw('<i style="display: inline-block;" id="mailbox" class="fi-mail profile-icon"></i>'), candidate_mailbox_path(@candidate.username, "inbox"), :id => "mailbox" %>
    <%=  link_to raw('<i class="fi-wrench profile-icon"></i>'), "/candidates/#{@candidate.username}/edit", :id=>"Edit"%>
  </div>

  <div class = "large-8 columns">
  <h3> List of Associated Recruiters </h3>
  <table id="recruiters">
    <tr>
      <th>Full Name</th>
      <th>Username</th>
      <th>Email</th>
    </tr>
  <% @recruiters.each do |recruiter|%>
    <tr>
      <td id="name"><%=recruiter.name%></td>
      <td id="username"><%=recruiter.username%></td>
      <td id="email"><%=recruiter.email%></td>
    </tr>
  <% end %>
  </table>
  </div>

  <div class = "large-3 columns">
  <h6> Associate Recruiter </h6>
  <% if flash[:error] %>
    <%= flash[:error] %>
    </br></br>
  <% end %>
  <%= form_tag("add_recruiter", method: "post") do %>
      <%= label_tag(:recruiter, "Recruiter's Username") %>
      <%= text_field_tag(:recruiter, nil, :id=>"recruiter_username") %>
      <%= submit_tag("Add") %>
  <% end %>
   <h6> Search by name or username </h6>
  <%= form_tag("search", method: "get") do %>
     <input type="hidden" id="candidate" name="candidate" value="<%= @candidate.username %>">
    <input type="text" id="keyword" name="keyword">
    <input type="submit" id="Search" value="Search">
  <% end %>
  </div>
</div>
