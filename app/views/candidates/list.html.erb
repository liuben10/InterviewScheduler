<div class = "row main-page">
  <div class = "small-1 columns user-icon">
    <%= link_to raw('<i class="fi-home profile-icon"></i>'), candidate_path %>
    <p>Home</p>
    <%= link_to raw('<i class="fi-calendar profile-icon"></i>'), calendar_candidate_path %>
    <p>Calendar</p>
    <%= link_to raw('<i class="fi-list-thumbnails profile-icon active-icon"></i>'), list_candidate_path, :id=>"List"%>
    <p>Contacts</p>
    <%= link_to raw('<i class="fi-mail profile-icon"></i>'), candidate_path %>
    <p>Messages</p>
    <%= link_to raw('<i class="fi-wrench profile-icon"></i>'), "/candidates/#{@candidate.username}/edit", :id=>"Edit"%>
    <p>Settings</p>
  </div>

  <div class = "large-6 columns">
	<div class = "row page-title">
      <div class = "small-12 columns">
        <h2> List of Associated Recruiters </h2>
      </div>
    </div>  
    <table id="recruiters">
      <tr>
        <th>Full Name</th>
        <th>Username</th>
        <th>Email</th>
      </tr>
      <% @recruiters.each do |recruiter|%>
        <tr>
          <td id="name"><%=recruiter.name%></td>
          <td id="username"><%=recruiter.username%></td>
          <td id="email"><%=recruiter.email%></td>
        </tr>
      <% end %>
    </table>
  </div>

  <div class = "large-3 columns search-feature">
  <h3> Associate Recruiter </h3>
  <% if flash[:error] %>
    <%= flash[:error] %>
    </br></br>
  <% end %>
  <h6> Add Recruiter </h6>
  <%= form_tag("add_recruiter", method: "post") do %>
      <%= text_field_tag(:recruiter, nil, :id=>"recruiter_username") %>
      <%= submit_tag("Add", class: "button alert")%>
  <% end %>
   <h6> Search by name or username </h6>
  <%= form_tag("search", method: "get") do %>
     <input type="hidden" id="candidate" name="candidate" value="<%= @candidate.username %>">
     <input type="text" id="keyword" name="keyword">
     <input type="submit" class ="button alert" id="Search" value="Search">
  <% end %>
  </div>
  <div class = "large-2 columns">
  </div>
</div>
